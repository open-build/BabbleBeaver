# Production Environment Variables for BabbleBeaver
# Copy this to .env and fill in your actual values

# CORS Configuration
CORS_ALLOWED_DOMAINS=http://localhost,https://localhost,http://labs.buildly.io,https://labs.buildly.io,http://labs-release.buildly.io,https://labs-release.buildly.io

# Google Cloud / Vertex AI Configuration
# Required for Vertex AI (NOT optional in production!)
PROJECT_ID=dev-buildly
LOCATION=us-west1
VERTEX_MODEL_NAME=gemini-2.0-flash-exp

# Google API Key (used for authentication with Vertex AI)
GOOGLE_API_KEY=AIzaSyCp9B9z7AonqKzzGsaNRK1au_3ah5_1-pM

# Buildly Labs Agent Configuration
BUILDLY_AGENT=true
BUILDLY_API_BASE_URL=https://labs-api.buildly.io
BUILDLY_AUTH_TOKEN=62e330ab93b10e9c0a3dbe1a5f739d79547f30eb

# LLM Provider Configuration
GEMINI_PRIORITY=0
GEMINI_ENABLED=true

# OpenAI (backup provider)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_PRIORITY=1
OPENAI_ENABLED=false

# Admin Authentication
# IMPORTANT: Change these in production!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=

# API Key Authentication
# Generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
# Frontend must send this as: Authorization: Bearer YOUR_API_KEY
API_KEY=

# Application Configuration
INITIAL_PROMPT_FILE_PATH=initial-prompt.txt

# Database Configuration
# For production, use managed PostgreSQL (Google Cloud SQL, AWS RDS, etc.)
# Leave empty to use SQLite (not recommended for production)
DATABASE_URL=postgresql://username:password@cloudsql-proxy:5432/babblebeaver
